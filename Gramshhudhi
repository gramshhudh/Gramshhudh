# CSS
css_content = """body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
}
.container {
    width: 90%;
    max-width: 1200px;
    margin: auto;
}
header {
    background-color: #4CAF50;
    color: white;
    padding: 1rem 0;
    text-align: center;
}
header nav a {
    color: white;
    margin: 0 1rem;
    text-decoration: none;
    font-weight: bold;
}
.hero {
    text-align: center;
    padding: 2rem 1rem;
    background-color: #f4f4f4;
}
.hero h2 { font-size: 2rem; }
.btn { display: inline-block; margin-top: 1rem; padding: 0.6rem 1.2rem; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px; font-weight: bold; }
.products-grid { display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem; padding: 2rem 0; }
.product { border: 1px solid #ccc; padding: 1rem; width: 200px; text-align: center; border-radius: 5px; }
.btn-small { display: inline-block; margin-top: 0.5rem; padding: 0.4rem 0.8rem; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px; font-size: 0.9rem; }
.product-details { display: flex; flex-wrap: wrap; gap: 1rem; margin-bottom: 2rem; border-bottom: 1px solid #ccc; padding-bottom: 1rem; }
.product-details img { width: 250px; border-radius: 5px; }
.product-details div { max-width: 600px; }
footer { text-align: center; background-color: #333; color: white; padding: 1rem 0; }"""

# Placeholder images URLs
images = {
    "honey.jpg": "https://via.placeholder.com/250x200?text=Honey",
    "turmeric.jpg": "https://via.placeholder.com/250x200?text=Turmeric",
    "ragi.jpg": "https://via.placeholder.com/250x200?text=Ragi",
    "palua.jpg": "https://via.placeholder.com/250x200?text=Palua",
    "rice.jpg": "https://via.placeholder.com/250x200?text=Rice"
}

# Create folder structure
os.makedirs(folder_name, exist_ok=True)
for sub in subfolders:
    os.makedirs(os.path.join(folder_name, sub), exist_ok=True)

# Create HTML files
for filename, content in html_files.items():
    with open(os.path.join(folder_name, filename), "w", encoding="utf-8") as f:
        f.write(content)

# Create CSS
with open(os.path.join(folder_name, "css", "style.css"), "w", encoding="utf-8") as f:
    f.write(css_content)

# Download placeholder images
for name, url in images.items():
    img_data = requests.get(url).content
    with open(os.path.join(folder_name, "images", name), "wb") as f:
        f.write(img_data)

# Create zip
zipf = ZipFile(f"{folder_name}.zip", "w")
for root, dirs, files in os.walk(folder_name):
    for file in files:
        zipf.write(os.path.join(root, file), os.path.relpath(os.path.join(root, file), folder_name))
zipf.close()

print(f"Created {folder_name}.zip successfully!")
